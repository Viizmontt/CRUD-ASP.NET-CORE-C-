@using P001.Models.ViewModels
@model ProductViewModel

<div class="container">
	<div class="card">
		<div class="card-header bg-primary">
			<h1>Crear un nuevo Producto</h1>
		</div>
		<div class="card-body">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="mb-3">
					<lable asp-for="Nombre" class="form-label"></lable>
					<input asp-for="Nombre" class="form-control"/>
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<lable asp-for="IdCategory" class="form-label"></lable>
					<select asp-for="IdCategory" class="form-control" asp-items="ViewBag.Categories"></select>
					<span asp-validation-for="IdCategory" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<lable asp-for="Precio" class="form-label"></lable>
					<input asp-for="Precio" class="form-control"/>
					<span asp-validation-for="Precio" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Guardar</button>
					<a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="Index">Regresar</a>
				</div>
			</form>
		</div>
	</div>
</div>
@Html.AntiForgeryToken()